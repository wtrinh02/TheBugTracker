@model IEnumerable<TheBugTracker.Models.Notification>



@{
    ViewData["Title"] = "OutBox";
}

<h1>Inbox</h1>
<a asp-action="Outbox" class="btn btn-light border-1 border-dark mb-3">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send-fill me-2" viewBox="0 0 16 16">
        <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471z" />
    </svg> Sent
</a>
<table class="table table-striped table-hover rounded-3 overflow-hidden" id="allProjects">
    <thead>
        <tr class="bg-dark-subtle">
            <th></th>
            <th class="text-dark fw-bolder">
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th class="text-dark fw-bolder">
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th class="text-dark fw-bolder">
                Sent
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <i class="fa-regular fa-envelope fa-2x text-dark"></i>
            </td>
            <td class="text-dark">
                    @if (item.Recipient?.AvatarFileData != null)
                    {
                        <img class="media-object me-1 rounded-circle border border-dark" src="data:image/*;base64,@(Convert.ToBase64String(item.Recipient.AvatarFileData))" style="width:30px;height:30px;" alt="" />
                    }
                    else
                    {
                        <img class="media-object me-1" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" alt="" style="width:30px;height:30px;" />
                    }
                @Html.DisplayFor(modelItem => item.Sender.FullName)
            </td>
             <td class="text-dark">
                @Html.DisplayFor(modelItem => item.Title)
            </td>

                <td class="text-dark">
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fs-8 bi bi-eye-fill text-dark me-2"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fs-8 bi bi-trash text-dark"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

        @section Scripts {
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebarmenu.js"></script>
    <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
        }