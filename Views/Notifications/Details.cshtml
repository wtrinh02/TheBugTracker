@model TheBugTracker.Models.Notification

@{
    ViewData["Title"] = Model.Title;
}



<div class="row gy-2 mt-2">
    <div class="col">
        <div class="card w-100">
            <div class="card-body p-4" style="overflow-y:auto;height:300px;">
                <h3 class="card-title fw-bolder mb-4  pb-3">@Model.Title <span class="fw-semibold fs-2 ms-2 border border-1 border-dark-subtle p-1 rounded">@Model.Created.ToString("MM/dd/yyyy HH:mm")</span> </h3>
                <ul class="list-unstyled text-dark ">

                    <li><strong>From:</strong> <span class="">
                            <a href="javascript:void(0);" class="me-2 mb-2">
                                @if (Model.Sender?.AvatarFileData != null)
                                {
                                    <img class="media-object rounded-circle border border-dark" src="data:image/*;base64,@(Convert.ToBase64String(Model.Sender.AvatarFileData))" alt="" style="width:30px;height:30px;" />
                                }
                                else
                                {
                                    <img class="media-object" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" alt="" style="width:30px;height:30px;" />
                                }
                            </a>
                        @Model.Sender.FullName</span></li>

                    <li><strong>To:</strong> <span class="">
                            <a href="javascript:void(0);" class="me-2 mb-2">
                                @if (Model.Recipient?.AvatarFileData != null)
                                {
                                    <img class="media-object rounded-circle border border-dark" src="data:image/*;base64,@(Convert.ToBase64String(Model.Recipient.AvatarFileData))" alt="" style="width:30px;height:30px;" />
                                }
                                else
                                {
                                    <img class="media-object" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" alt="" style="width:30px;height:30px;" />
                                }
                            </a>@Model.Recipient.FullName
                        </span>
                    </li>

                </ul>
                <hr />
                <p>@Html.Raw(Model.Message)</p>

            </div>
            <div class="card-footer">
                <div>

                    <a asp-action="Inbox">Back to Inbox</a>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
  
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebarmenu.js"></script>
    <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
}