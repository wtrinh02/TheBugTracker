@model TheBugTracker.Models.Ticket

@{
    ViewData["Title"] = "Create";
}


<section id="multiple-column-form">
    <div class="row match-height">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Create Ticket</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form" asp-action="Create" method="post" >
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <div class="form-group mb-1">
                                        <label asp-for="Title" class="control-label"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 col-12">
                                    <div class="form-group mb-1">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-12 col-12">
                                    <div class="form-group mb-1">
                                        <label asp-for="ProjectId" class="control-label"></label>
                                        <select asp-for="ProjectId" class="form-select form-control" asp-items="ViewBag.ProjectId"></select>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group mb-1">
                                        <label asp-for="TicketTypeId" class="control-label"></label>
                                        <select asp-for="TicketTypeId" class="form-select form-control" asp-items="ViewBag.TicketTypeId"></select>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12">
                                    <div class="form-group mb-1">
                                        <label asp-for="TicketPriorityId" class="control-label"></label>
                                        <select asp-for="TicketPriorityId" class="form-select form-control" asp-items="ViewBag.TicketPriorityId"></select>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-end form-group mt-2">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#Description').summernote({
            placeholder: "Ticket Description"
        });
    </script>
  
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebarmenu.js"></script>
    <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
    

}
