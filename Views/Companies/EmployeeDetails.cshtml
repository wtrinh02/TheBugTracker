@model TheBugTracker.Models.BTUser
@using Microsoft.AspNetCore.Identity
@inject UserManager<BTUser> UserManager
@{
	BTUser btUser = await UserManager.GetUserAsync(User);
}
<div class="row">
	<div class="col-lg-4 col">
		
		<div class="card overflow-hidden">
			<div class="card-body p-4">
				
				
					<div class="row">

					<div class="p-4 d-flex align-items-center justify-content-center ">
						@if (Model.AvatarFileData != null)
						{
							<img class="media-object rounded-circle border border-dark" style="width:137px;height:137px;" src="data:image/*;base64,@(Convert.ToBase64String(Model.AvatarFileData))" alt="" />
						}
						else
						{
							<img class="media-object" src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png" alt="" style="width:80px;height:80px;" />
						}
						</div>

					</div>
				<div class="row d-flex flex-column align-items-center justify-content-center">
						<h1 class="card-title mb-9 fw-semibold">@Model.FullName</h1>
						<h4 class="fw-semibold">@ViewData["Role"]</h4>
				</div>

				
			</div>
		</div>
		
	</div>
	<div class="col-lg-8 col">
		<div class="card overflow-hidden">
			<div class="card-body p-4">

				<h3>Profile Details</h3>
				<p class="fw-bolder">Full Name: <span class="fw-normal">@Model.FullName</span></p>
				<p class="fw-bolder">Company: <span class="fw-normal">@ViewData["CName"]</span></p>
				<p class="fw-bolder">Role: <span class="fw-normal">@ViewData["Role"]</span></p>
				<p class="fw-bolder">Phone: <span class="fw-normal">@Model.PhoneNumber</span></p>
				<p class="fw-bolder">Email: <span class="fw-normal">@Model.Email</span></p>
				@if(Model.Id == btUser.Id)
				{
					<a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-primary">Manage Account</a>
				}

			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="/assets/libs/jquery/dist/jquery.min.js"></script>
	<script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/assets/js/sidebarmenu.js"></script>
	<script src="/assets/libs/simplebar/dist/simplebar.js"></script>
}