@model TheBugTracker.Models.ViewModels.AssignPMViewModel

@{
    ViewData["Title"] = "Assign PM";
}
<h1>Project: @Model.Project.Name</h1>

<h4>Assign Project Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AssignPM" asp-controller="Projects">
            <input hidden asp-for="Project.Id" />

            <h2>@Model.Project.Name</h2>

            <p>@Model.Project.Description</p>

            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="PMID" class="form-select form-control" asp-items="@Model.PMList">
                    <option></option>
                </select>

                <input type="submit" value="Assign" class="btn  btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="UnassignedProjects">Back to List</a>
</div>

@section Scripts {
    <script src="/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/sidebarmenu.js"></script>
    <script src="/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="/assets/js/dashboard.js"></script>
}