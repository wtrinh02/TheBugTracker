@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-1 pb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-1 pb-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="file" asp-for="Input.Image" class="form-control" accept=".png,.jpg,.bmp,.gif" />
                <label asp-for="Input.Image"></label>
                <span asp-validation-for="Input.Image" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <img src="@Model.CurrentImage" class="img-fluid rounded-circle" style="width:150px;height:150px;" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
