@page
@model RegisterByInviteModel
@{
    ViewData["Title"] = "Register";

}





<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-6 col-xxl-3">
                    <div class="card mb-0">
                        <div class="card-body">
                            <a asp-action="Index" asp-controller="Home" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="/img/icons/header_image.png" width="180" alt="">
                            </a>
                            <p class="text-center">Splat your bugs!</p>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h2>Create a password for your account.</h2>
                                <hr />
                                <input hidden asp-for="Input.Email" value="@ViewData["Email"]" />
                                <input hidden asp-for="Input.FirstName" value="@ViewData["FirstName"]" />
                                <input hidden asp-for="Input.LastName" value="@ViewData["LastName"]" />
                                <input hidden asp-for="Input.CompanyId" value="@ViewData["CompanyId"]" />
                                <input hidden asp-for="Input.token" value="@ViewData["Token"]" />
                                <div class="form-check">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                            </form>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
